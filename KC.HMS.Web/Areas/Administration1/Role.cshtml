@page
@model KC.HMS.Web.Areas.Administration.RoleModel
@{

} 
<h1>Role Manager</h1>
<form method="post">
    <div class="input-group">
        <input name="@Model.Role" class="form-control w-25">
        <span class="input-group-btn">
            <button class="btn btn-info">Create Role</button>
        </span>
    </div>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Listing)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>
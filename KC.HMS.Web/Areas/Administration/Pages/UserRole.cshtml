@page
@model KC.HMS.Web.Areas.Administration.Pages.UserRoleModel
@{
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Manage User Roles</h3>
            Add/Remove Roles for User / @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.RolesSelected.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.RolesSelected[i].RoleId" />
                    <input type="hidden" asp-for="@Model.RolesSelected[i].RoleName" />
                    <input asp-for="@Model.RolesSelected[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.RolesSelected[i].Selected">
                        @Model.RolesSelected[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-dark"
                   style="width:auto" />

            <a class="dropdown-item" asp-area="Administration" asp-page="/Users" title="Manage RoleIndex">Manage Users</a>
            @*<a asp-action="EditUser" asp-route-id="@ViewBag.userId"
               class="btn btn-primary" style="width:auto">Cancel</a>*@
        </div>
    </div>
</form>